
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user profile within the Vaselearn application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user profile, matching the Firebase Auth UID."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "name": {
          "type": "string",
          "description": "User's display name."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the user profile was created.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "email",
        "name",
        "createdAt"
      ]
    },
    "Note": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Note",
      "type": "object",
      "description": "Represents a user's note within the Vaselearn application.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "title": { "type": "string" },
        "content": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "userId", "title", "content", "createdAt", "updatedAt"]
    },
    "PracticeSession": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "PracticeSession",
      "type": "object",
      "description": "Represents a completed quiz session.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "topic": { "type": "string" },
        "score": { "type": "number" },
        "totalQuestions": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" },
        "questions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "question": { "type": "string" },
              "userAnswer": { "type": "string" },
              "correctAnswer": { "type": "string" },
              "isCorrect": { "type": "boolean" }
            },
            "required": ["question", "userAnswer", "correctAnswer", "isCorrect"]
          }
        }
      },
      "required": ["id", "userId", "topic", "score", "totalQuestions", "createdAt", "questions"]
    },
    "Mistake": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Mistake",
      "type": "object",
      "description": "Represents a single question a user answered incorrectly.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "practiceSessionId": { "type": "string" },
        "topic": { "type": "string" },
        "question": { "type": "string" },
        "userAnswer": { "type": "string" },
        "correctAnswer": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "userId", "practiceSessionId", "topic", "question", "userAnswer", "correctAnswer", "createdAt"]
    },
    "QuizFeedback": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "QuizFeedback",
      "type": "object",
      "description": "Represents user feedback on a single AI-generated quiz question.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "question": { "type": "string" },
        "rating": { "type": "string", "enum": ["good", "bad"] },
        "topic": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "userId", "question", "rating", "topic", "createdAt"]
    },
     "CustomGoal": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CustomGoal",
      "type": "object",
      "description": "Represents a user-defined goal or to-do item.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "text": { "type": "string", "description": "The content of the goal." },
        "isCompleted": { "type": "boolean", "description": "Whether the user has marked the goal as completed." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "userId", "text", "isCompleted", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information.",
      "rules": {
        "read": "request.auth.uid == userId",
        "create": "request.auth.uid == userId"
      }
    },
    "/users/{userId}/{anyDoc=**}": {
      "schema": null,
      "description": "Allows a user to access all of their own sub-collections and documents.",
      "rules": {
        "read": "request.auth.uid == userId",
        "write": "request.auth.uid == userId"
      }
    },
    "/feedback/{feedbackId}": {
      "schema": { "$ref": "#/entities/QuizFeedback" },
      "description": "Stores user feedback on AI-generated questions. This is a root collection for easier analysis.",
       "rules": {
        "read": "request.auth != null",
        "write": "request.auth != null"
      }
    }
  }
}
